<div class="container">
  <h2>New Venue</h2>
  <%= render('layouts/error', object: { data: @venue, name: 'creating venue' }) if @venue %>

  <%= form_for :venue, url: venues_path do |f| %>
    <div class="form-group">
    	<%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
    	<%= f.label :full_address %>
      <%= f.text_field :full_address, class: 'form-control' %>    	
    </div>
  	
  	<div class="form-group">
  		<%= f.label :region %>
  		<br/>
  		<%= select :venue, :region_id, Region.all.collect { |r| [r.name, r.id] }, class: 'c-select' %>
  	</div>

    <div class="form-actions">
      <%= f.submit "Create", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>